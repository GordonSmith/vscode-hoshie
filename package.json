{
    "private": true,
    "name": "hoshie",
    "displayName": "Hoshie Language",
    "description": "Functional Data Processing Language",
    "publisher": "",
    "version": "0.0.1",
    "categories": [
        "Programming Languages"
    ],
    "main": "./dist/extension.js",
    "scripts": {
        "compile": "tsc",
        "watch": "run-s \"compile -- -w\"",
        "build": "run-s compile",
        "lint": "tslint --project . src/**/*.ts",
        "pretest": "run-s compile lint",
        "test": "node ./dist/test/runTest.js",
        "vscode:prepublish": "run-s build test"
    },
    "devDependencies": {
        "@hpcc-js/util": "^2.11.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.1",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.43.0",
        "chevrotain": "^6.5.0",
        "glob": "^7.1.6",
        "mocha": "^7.0.1",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "tslint": "^6.1.1",
        "typescript": "^3.7.5",
        "vscode-test": "^1.3.0"
    },
    "engines": {
        "vscode": "^1.43.0"
    },
    "activationEvents": [
        "onLanguage:hoshie"
    ],
    "contributes": {
        "languages": [
            {
                "id": "hoshie",
                "aliases": [
                    "Hoshie",
                    "hoshie"
                ],
                "extensions": [
                    ".ho"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "hoshie",
                "scopeName": "source.hoshie",
                "path": "./syntaxes/hoshie.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "extension.helloWorld",
                "title": "Hello World"
            }
        ]
    }
}